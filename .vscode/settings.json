{
  "optitrust.enableKeybindings": true,
  "search.exclude": {
    "**/_build": true,
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
	"editor.tabSize": 2,
	"editor.detectIndentation": false,
  "ocaml.server.args": [
    "--fallback-read-dot-merlin",
  ],
  "files.associations": {
    "*.md": "markdown",
    "*.v": "coq",
    "*.ml": "ocaml",
    "*.mli": "ocaml",
    "*.json": "jsonc",
    "*.tex": "latex",
    "*.js": "javascript",
    ".html": "html",
    "*.Makefile": "makefile",
    "array": "cpp",
    "string_view": "cpp",
    "initializer_list": "cpp",
    "utility": "cpp"
  },
  "swapf.patterns": [
    {
      "pattern": "^(?<path>.*?)_(out|exp)\\.cpp$",
      "alternatives": [
        "**/<path>_out.cpp",
        "**/<path>_exp.cpp",
        "**/<path>.cpp",
        "**/<path>.ml",
      ]
    },
    {
      "pattern": "^(?<path>.*?)(\\.ml|\\.cpp)$",
      "alternatives": [
        "**/<path>.ml",
        "**/<path>.cpp",
      ]
    },
  ],
  "ocaml.sandbox": {
    "kind": "opam",
    "switch": "4.14.2+flambda"
  },
}
