{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // The -i option is necessary for launching GUI programs from tasks
    "version": "2.0.0",
    "tasks": [
      // Build using make
      {
        "label": "Build everything",
        "type": "shell",
        "command": "make all",
        "options": {
          "cwd": "${workspaceFolder}"
        }
      },
      {
        "label": "Build everything in the current folder",
        "type": "shell",
        "command": "make all",
        "options": {
          "cwd": "${fileDirname}"
        }
      },

      // View diff or trace
      {
        "label": "View diff",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "step_diff",
          "${relativeFile}",
          "${lineNumber}"
        ]
      },
      {
        "label": "View diff using internal syntax",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "step_diff",
          "${relativeFile}",
          "${lineNumber}",
          "-print-optitrust-syntax"
        ]
      },
      {
        "label": "View step result",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "step_result",
          "${relativeFile}",
          "${lineNumber}"
        ]
      },
      {
        "label": "View trace",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "full_trace",
          "${relativeFile}",
          "${lineNumber}",
        ]
      },
      {
        "label": "View standalone trace",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "standalone_full_trace",
          "${relativeFile}",
          "${lineNumber}"
        ]
      },
      {
        "label": "View standalone detailed trace",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "standalone_full_trace",
          "${relativeFile}",
          "${lineNumber}",
          "-detailed-trace"
        ]
      },
      {
        "label": "View trace from intermediate state",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "full_trace_from_inter",
          "${relativeFile}",
          "${lineNumber}",
        ]
      },
      {
        "label": "View trace for one step",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "step_trace",
          "${relativeFile}",
          "${lineNumber}",
          "-detailed-trace"
        ]
      },
      {
        "label": "View big step diff",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "step_diff",
          "${relativeFile}",
          "${lineNumber}",
          "-only-big-steps"
        ]
      },
      {
        "label": "View diff from intermediate state",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "step_diff_from_inter",
          "${relativeFile}",
          "${lineNumber}",
        ]
      },
      {
        "label": "View big step diff from intermediate state",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "step_diff_from_inter",
          "${relativeFile}",
          "${lineNumber}",
          "-only-big-steps"
        ]
      },
      {
        "label": "Save intermediate state",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "save_inter",
          "${relativeFile}",
          "${lineNumber}"
        ]
      },
      {
        "label": "Redo last view command",
        "type": "shell",
        "command": "tools/_last_view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        }
      },

      // Run unit tests
      {
        "label": "Run the current test",
        "type": "shell",
        "command": "./tester",
        "args": [
          "run",
          "-with-ignored",
          "${relativeFile}"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        }
      },
      {
        "label": "Open diff for the current test",
        "type": "shell",
        "command": "./tester",
        "args": [
          "diff",
          "-with-ignored",
          "${relativeFile}"
        ],
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        }
      },
      {
        "label": "Run the current test with -dump-trace",
        "type": "shell",
        "command": "./tester",
        "args": [
          "run",
          "-with-ignored",
          "-dump-trace",
          "${relativeFile}"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        }
      },
      {
        "label": "Run all the tests",
        "type": "shell",
        "command": "./tester",
        "args": [
          "run",
          "tests"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "presentation": {
          "clear": true
        }
      },
      {
        "label": "Rerun the last-tried test(s)",
        "type": "shell",
        "command": "./tester_last.sh",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "presentation": {
          "clear": true
        }
      },
      {
        "label": "Run the previously failed tests",
        "type": "shell",
        "command": "./tester",
        "args": [
          "run",
          "tofix.tests"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "presentation": {
          "clear": true
        }
      },
      {
        "label": "Open unit test ML and CPP files",
        "type": "shell",
        "command": "${workspaceFolder}/.vscode/open_test.sh",
        "args": [
          "${fileBasename}"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [],
        "presentation": {
          "reveal": "never"
        }
      },
      {
        "label": "Open unit test ML and CPP files and documentation",
        "type": "shell",
        "command": "${workspaceFolder}/.vscode/open_test.sh",
        "args": [
          "${fileBasename}",
          "withdoc"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [],
        "presentation": {
          "reveal": "never"
        }
      },
      {
        "label": "Diff wrong tests output",
        "type": "shell",
        "command": ".vscode/diff_wrong_tests_output.sh",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [],
        "presentation": {
          "reveal": "never"
        }
      },
      // View documentation
      {
        "label": "Open doc for current source file in browser",
        "type": "shell",
        "command": "doc/open_doc_for.sh",
        "args": [ "${file}" ],
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
      },
      // Run script
      {
        "label": "Execute doc/add_tests_into_doc/run.sh",
        "type": "shell",
        "command": "./run.sh",
        "args": [],
        "options": {
          "cwd": "${workspaceFolder}/doc/add_tests_into_doc",
          "shell": {
            "args": ["-i"]
          }
        },
      },
      {
        "label": "Run bash script",
        "type": "shell",
        "command": "bash",
        "args": [
          "-c",
          "${file}",
        ],
        "options": {
          "cwd": "${fileDirname}",
        },
        "presentation": {
          "clear": true,
          "reveal": "always"
        },
      }

    ]
}
