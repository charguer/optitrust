{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // The -i option is necessary for launching GUI programs from tasks
    "version": "2.0.0",
    "tasks": [
      // Build using make (currently not using run_action.sh)
      {
        "label": "Build everything",
        "type": "shell",
        "command": "make all",
        "options": {
          "cwd": "${workspaceFolder}"
        }
      },
      {
        "label": "Build everything in the current folder",
        "type": "shell",
        "command": "make all",
        "options": {
          "cwd": "${fileDirname}"
        }
      },

      // View diff or trace
      {
        "label": "View diff",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "tools/view_result.sh",
          "step_diff",
          "${relativeFile}",
          "${lineNumber}"
        ]
      },
      {
        "label": "View diff only code",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "tools/view_result.sh",
          "step_diff",
          "${relativeFile}",
          "${lineNumber}",
          "-print-only-code"
        ]
      },
      {
        "label": "View diff using internal syntax",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "tools/view_result.sh",
          "step_diff",
          "${relativeFile}",
          "${lineNumber}",
          "-print-optitrust-syntax"
        ]
      },
      {
        "label": "View step result",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "tools/view_result.sh",
          "step_result",
          "${relativeFile}",
          "${lineNumber}"
        ]
      },
      {
        "label": "View trace",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "tools/view_result.sh",
          "full_trace",
          "${relativeFile}",
          "${lineNumber}",
        ]
      },
      {
        "label": "View trace light",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "tools/view_result.sh",
          "full_trace",
          "${relativeFile}",
          "${lineNumber}",
          "-substeps-including-ast",
          "small"
        ]
      },
      {
        "label": "View standalone trace",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "tools/view_result.sh",
          "standalone_full_trace",
          "${relativeFile}",
          "${lineNumber}"
        ]
      },
      {
        "label": "View standalone trace light",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "tools/view_result.sh",
          "standalone_full_trace",
          "${relativeFile}",
          "${lineNumber}",
          "-substeps-including-ast",
          "small",
          "-trace-as-text"
        ]
      },
      {
        "label": "View standalone trace all-important",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "tools/view_result.sh",
          "standalone_full_trace",
          "${relativeFile}",
          "${lineNumber}",
          "-substeps-including-ast",
          "all-important",
        ]
      },
      {
        "label": "View trace from intermediate state",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "tools/view_result.sh",
          "full_trace_from_inter",
          "${relativeFile}",
          "${lineNumber}",
        ]
      },
      {
        "label": "View trace for one step",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "tools/view_result.sh",
          "step_trace",
          "${relativeFile}",
          "${lineNumber}"
        ]
      },
      {
        "label": "View big step diff",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "tools/view_result.sh",
          "step_diff",
          "${relativeFile}",
          "${lineNumber}",
          "-only-big-steps"
        ]
      },
      {
        "label": "View diff from intermediate state",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "tools/view_result.sh",
          "step_diff_from_inter",
          "${relativeFile}",
          "${lineNumber}",
        ]
      },
      {
        "label": "View big step diff from intermediate state",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "tools/view_result.sh",
          "step_diff_from_inter",
          "${relativeFile}",
          "${lineNumber}",
          "-only-big-steps"
        ]
      },
      {
        "label": "Save intermediate state",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "tools/view_result.sh",
          "save_inter",
          "${relativeFile}",
          "${lineNumber}"
        ]
      },
      {
        "label": "Redo last view command",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args" : [
          "tools/_last_view_result.sh"
        ]
      },

      // Run unit tests (currently not using run_action.sh)
      {
        "label": "Run the current test",
        "type": "shell",
        "command": "./tester",
        "args": [
          "run",
          "-with-ignored",
          "${relativeFile}"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        }
      },
      {
        "label": "Run and open diff for the current test",
        "type": "shell",
        "command": "./tester",
        "args": [
          "rundiff",
          "-with-ignored",
          "${relativeFile}"
        ],
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        }
      },
      {
        "label": "Run and open meld for the current test",
        "type": "shell",
        "command": "./tester",
        "args": [
          "runmeld",
          "-with-ignored",
          "${relativeFile}"
        ],
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        }
      },
      {
        "label": "Run the current test with -dump-trace",
        "type": "shell",
        "command": "./tester",
        "args": [
          "run",
          "-with-ignored",
          "-dump-trace",
          "${relativeFile}"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        }
      },
      {
        "label": "Run all the tests",
        "type": "shell",
        "command": "./tester",
        "args": [
          "run",
          "tests"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "presentation": {
          "clear": true
        }
      },
      {
        "label": "Rerun the last-tried test(s)",
        "type": "shell",
        "command": "./tester_last.sh",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "presentation": {
          "clear": true
        }
      },
      {
        "label": "Run the previously failed tests",
        "type": "shell",
        "command": "./tester",
        "args": [
          "run",
          "tofix.tests"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "presentation": {
          "clear": true
        }
      },
      {
        "label": "Open unit test ML and CPP files",
        "type": "shell",
        "command": "${workspaceFolder}/.vscode/open_test.sh",
        "args": [
          "${fileBasename}"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [],
        "presentation": {
          "reveal": "never"
        }
      },
      {
        "label": "Open unit test ML and CPP files and documentation",
        "type": "shell",
        "command": "${workspaceFolder}/.vscode/open_test.sh",
        "args": [
          "${fileBasename}",
          "withdoc"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [],
        "presentation": {
          "reveal": "never"
        }
      },
      {
        "label": "Compile with gcc",
        "type": "shell",
        "command": "gcc",
        "args": [
          "-I",
          "${workspaceFolder}/include",
          "-c",
          "${file}",
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [],
        "presentation": {
          "reveal": "always"
        }
      },
      {
        "label": "Diff wrong tests output",
        "type": "shell",
        "command": ".vscode/diff_wrong_tests_output.sh",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [],
        "presentation": {
          "reveal": "never"
        }
      },
      // View documentation
      {
        "label": "Open doc for current source file in browser",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "args": [ "${file}" ],
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "args": [
          "doc/open_doc_for.sh"
        ]
      },
      // Test shortcuts --> via runaction
      {
        "label": "Test OptiTrust Shortcuts",
        "type": "shell",
        "command": ".vscode/run_action.sh",
        "args": [ "tools/test_shortcuts.sh",
                  "${file}",
                  "${lineNumber}" ],
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        }
      },
      // Test shortcuts --> direct
      /*{
        "label": "Test OptiTrust Shortcuts",
        "type": "shell",
        "command": "tools/test_shortcuts.sh",
        "args": [ "${file}",
                  "${lineNumber}" ],
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        }
      },*/

      // "command": "env -i DISPLAY=$DISPLAY XAUTHORITY=$XAUTHORITY PATH=$PATH snap run tools/test_shortcuts.sh"
      // Run script (currently not using run_action.sh)
      {
        "label": "Execute doc/add_tests_into_doc/run.sh",
        "type": "shell",
        "command": "./run.sh",
        "args": [],
        "options": {
          "cwd": "${workspaceFolder}/doc/add_tests_into_doc",
          "shell": {
            "args": ["-i"]
          }
        },
      },
      {
        "label": "Run bash script",
        "type": "shell",
        "command": "bash",
        "args": [
          "-c",
          "${file}",
        ],
        "options": {
          "cwd": "${fileDirname}",
        },
        "presentation": {
          "clear": true,
          "reveal": "always"
        },
      }

    ]
}
